<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context=".activity.UserInfoActivity">

  <include layout="@layout/lib_layout_toolbar"/>

  <android.support.v7.widget.CardView
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginTop="140dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="0dp"
    app:cardBackgroundColor="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
      android:layout_marginBottom="15dp"
      android:orientation="vertical"
      android:gravity="center_horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <ImageView
        android:id="@+id/iv_info_bg"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="180dp" />
      <TextView
        android:id="@+id/tv_info_name"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

      <TextView
        android:id="@+id/tv_info_desc"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="4dp"
        android:text="@string/user_info_desc_default"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

      <FrameLayout
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <android.support.design.widget.FloatingActionButton
          android:id="@+id/fb_user_lost"
          android:layout_marginStart="5dp"
          android:layout_gravity="center_vertical"
          app:backgroundTint="@color/colorPrimary"
          android:layout_width="wrap_content"
          android:src="@drawable/ic_lost_find"
          android:layout_height="wrap_content" />
        <android.support.design.widget.FloatingActionButton
          android:layout_gravity="center"
          android:id="@+id/fb_user_statement"
          app:backgroundTint="@color/colorPrimary"
          android:layout_width="wrap_content"
          android:src="@drawable/ic_statement"
          android:layout_height="wrap_content" />
        <android.support.design.widget.FloatingActionButton
          android:layout_gravity="end|center_vertical"
          android:id="@+id/fb_user_market"
          android:layout_marginEnd="5dp"
          app:backgroundTint="@color/colorPrimary"
          android:layout_width="wrap_content"
          android:src="@drawable/ic_second_market"
          android:layout_height="wrap_content" />

      </FrameLayout>

    </LinearLayout>
  </android.support.v7.widget.CardView>

  <ImageView
    android:id="@+id/cv_info_portrait"
    android:layout_marginTop="80dp"
    android:elevation="8dp"
    android:layout_width="120dp"
    android:layout_gravity="center_horizontal"
    android:layout_height="120dp" />

</FrameLayout>